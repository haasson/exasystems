.products.products-wrap__products
  .wrapper
    .products__inner
      .products__container
        .products__title.section-title Продукты и решения
        .products__subtitle Полный цикл работ по построению надежной IT-архитектуры. Под ключ.
        .products__slider.slider.hide
          each slide, i in productSlider
            div
              .products__slide
                img.products__img(src=`assets/img/4products/${i + 1}.png`)
                .products__content
                  p.products__name #{slide.title}
                  ul.products__tags
                    each tag in slide.tags
                       li.products__tag(class=`products__tag_${tag.color}`) #{tag.text}
        .products__line
          +sliderLine()

